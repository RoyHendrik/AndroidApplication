<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Today" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Component overrides -->
        <item name="textInputStyle">@style/TextInputLayoutTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonTheme</item>

        <!-- Typography -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Components -->
    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="boxCornerRadiusBottomEnd">90dp</item>
        <item name="boxCornerRadiusBottomStart">90dp</item>
        <item name="boxCornerRadiusTopEnd">90dp</item>
        <item name="boxCornerRadiusTopStart">90dp</item>
    </style>

    <style name="FloatingActionButtonTheme" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Screens -->
    <style name="Theme.Splash" parent="Theme.Today">
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Auth" parent="Theme.Today">
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Main" parent="Theme.Today">
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
    </style>

</resources>